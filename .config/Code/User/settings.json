{
    "files.insertFinalNewline": true,
    "git.ignoreMissingGitWarning": true,

    "vim.hlsearch": true,
    "vim.joinspaces": false,
    "vim.textwidth": 100,
    "vim.vimrc.enable": true,

    "workbench.colorTheme": "Default Dark Modern",

    "[python]": {
        "editor.defaultFormatter": "ms-python.python"
    },
    "[tf]": {
        "editor.tabSize": 2
    },
    "[yaml]": {
        "editor.tabSize": 2
    }
}
